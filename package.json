    "@itddd/eslint-config": "workspace:*",
    "@itddd/typescript-config": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "prettier": "^3.2.5",
    "sort-package-json": "^2.10.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.1.2",
  "engines": {
    "node": "^20.11.0",
    "pnpm": "^9.1.0"
